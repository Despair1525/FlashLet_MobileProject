<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PRM_Final_Project" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryDark">@color/theme_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/theme_color</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:fontFamily">@font/maian</item>
        <item name="android:textColorSecondary">@color/toolBarColor</item>


        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.PRM_Final_Project.Custombar">
        <item name="colorPrimary">#ffffff</item>
        <item name="titleTextColor">@color/colorPrimary</item>
        <item name="actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_setting_viewcard</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
        <item name="android:contentDescription">"Lala"</item>
    </style>

    <style
        name="AppTheme.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.PRM_Final_Project.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.PRM_Final_Project.NoActionBar2" parent="Theme.PRM_Final_Project.NoActionBar">
        <item name="colorPrimary">@color/theme_color_bold</item>
        <item name="colorPrimaryDark">@color/theme_color_bold</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>
    <style name="TabLayout" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.PRM_Final_Project.CardUser">
        <item name="android:fontFamily">@font/nunito2</item>
    </style>
</resources>