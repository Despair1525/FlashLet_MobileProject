    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:text="Cards"
        android:textSize="20dp"
        android:id="@+id/Tv_cardsList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewLearn" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Tv_cardsList">
    <androidx.recyclerview.widget.RecyclerView
        android:background="@xml/textview_border"
        android:id="@+id/RcCardList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:clipToPadding="false"
        android:paddingBottom="10000dp"
        />
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>