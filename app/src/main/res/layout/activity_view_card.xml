<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.ViewCardActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerImageSlider"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:background="@xml/textview_border"
        android:textColor="#000000"
        android:textSize="24sp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.171"

        />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Title"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewLearn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="116dp"
        android:onClick="onLearn"
        android:src="@drawable/img"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPagerImageSlider" />

    <ImageView
        android:id="@+id/vc_deckMode"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="116dp"
        app:layout_constraintStart_toEndOf="@+id/imageViewLearn"
        app:layout_constraintTop_toBottomOf="@+id/viewPagerImageSlider"
        android:src="@drawable/ic_baseline_fullscreen_24"
        android:onClick="onLearn"/>

    <ImageView
        android:id="@+id/vc_Reload"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="116dp"
        app:layout_constraintStart_toEndOf="@+id/vc_deckMode"
        app:layout_constraintTop_toBottomOf="@+id/viewPagerImageSlider"
        android:src="@drawable/ic_baseline_autorenew_24"
       />

    <ImageView
        android:id="@+id/vc_Test"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="116dp"
        app:layout_constraintStart_toEndOf="@+id/vc_Reload"
        app:layout_constraintTop_toBottomOf="@+id/viewPagerImageSlider"
        android:src="@drawable/ic_baseline_checklist_24"
        />

