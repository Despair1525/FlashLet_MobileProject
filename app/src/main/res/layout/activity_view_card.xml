    <TextView
        android:id="@+id/textViewFullScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="Full Screen"
        app:layout_constraintStart_toEndOf= "@+id/textViewLearn"
        app:layout_constraintTop_toBottomOf="@+id/vc_deckMode" />

    <TextView
        android:id="@+id/textViewLearn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="Learn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLearn" />
    <TextView
        android:id="@+id/textViewReload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="Reload"
        app:layout_constraintStart_toEndOf="@id/textViewFullScreen"
        app:layout_constraintTop_toBottomOf="@+id/vc_Reload" />
    <TextView
        android:id="@+id/textViewCheckList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:text="Test"
        app:layout_constraintStart_toEndOf="@id/textViewReload"
        app:layout_constraintTop_toBottomOf="@+id/vc_Test" />



<!--    <TextView-->
