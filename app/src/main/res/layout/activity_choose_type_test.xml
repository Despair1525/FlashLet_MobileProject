<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/numques"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal" >

    <EditText
        android:id="@+id/numques_num"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:ems="10"
        android:hint="Enter number of question"
        android:inputType="number"
        />

        <TextView
            android:id="@+id/numques_total"
            android:textSize="20dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="/"
            />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/QuestionType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/numques">

        <RadioButton
            android:id="@+id/multiChoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Multiple Choice" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Written"
            android:id="@+id/writtenChoice"
            android:checked="false"
            />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>