<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:textAlignment="center"
    tools:context=".Ui.Activity.MainActivity"
    android:orientation="vertical"
    >


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <TextView
            android:id="@+id/tvHelloUser"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Hello,"
            android:textSize="36sp"
            android:textStyle="bold"
            android:gravity="bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tvHelloUserName"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:text="Manh"
            android:gravity="bottom"
            android:textSize="36sp"
            app:layout_constraintStart_toEndOf="@+id/tvHelloUser"
            app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>
<com.google.android.material.tabs.TabLayout
    android:id="@+id/tabDeckType"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    android:background="@drawable/rect_back"
    app:tabMode="fixed"
    app:tabRippleColor="@null"
    android:layout_margin="5dp"
    app:tabIndicator="@null"
    android:paddingTop="5dp"
    android:scrollbars="horizontal"
    />


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPageHomePage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/RvListDeckType"
            >
        </androidx.viewpager2.widget.ViewPager2>



</LinearLayout>