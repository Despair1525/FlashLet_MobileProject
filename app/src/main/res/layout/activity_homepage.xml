<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:textAlignment="center"
    tools:context=".Ui.Activity.MainActivity"
    android:orientation="vertical"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvHelloUser"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Hello,"
            android:textSize="36sp"
            android:textStyle="bold"
            android:gravity="bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
           />

        <TextView
            android:id="@+id/tvHelloUserName"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:text="Manh"
            android:gravity="bottom"
            android:textSize="36sp"
            app:layout_constraintStart_toEndOf="@+id/tvHelloUser"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="30dp"
            android:id="@+id/RvListDeckType"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/tvHelloUserName"
            />
<TextView
    android:id="@+id/tvViewAll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/toolBarColor"
    android:text="Views All"
    app:layout_constraintTop_toBottomOf="@+id/RvListDeckType"
    android:gravity="right"
    android:textSize="15dp"
    android:layout_margin="20dp"
    />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RvDecksPublic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/tvViewAll"
            android:paddingBottom="50dp"
           >
        </androidx.recyclerview.widget.RecyclerView>

        <ProgressBar
            android:id="@+id/pbLoadingData"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginStart="150dp"
            app:layout_constraintTop_toBottomOf="@+id/tvViewAll"
            app:layout_constraintStart_toStartOf="parent"
            android:indeterminateTint="@color/toolBarColor"
            >
        </ProgressBar>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>