<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ViewCardActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerImageSliderLearn"
        android:layout_width="364dp"
        android:layout_height="271dp"
        android:background="@xml/textview_border"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"

        />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonStudying"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPagerImageSliderLearn"
        android:text="Studying"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonContinue"
        app:layout_constraintStart_toEndOf="@id/buttonStudying"
        app:layout_constraintTop_toBottomOf="@+id/viewPagerImageSliderLearn"
        android:text="Continue"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>